<GuiXml>
  <Animations>
    <AnimationTimeline name="ArkUIAttributeBarDiffFade">
      <Animations>
        <AlphaAnimation duration="50" startAlpha="0" endAlpha="0" />
        <AlphaAnimation delay="50" duration="50" startAlpha="0" endAlpha="1" />
        <AlphaAnimation delay="2500" duration="400" startAlpha="1" endAlpha="0" />
      </Animations>
    </AnimationTimeline>
  </Animations>
  <Controls>
    <Label name="ArkUIAttributeBarLabel"
        font="ZoFontWinH4"
        color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED"
        virtual="true" />

    <!-- SECTION: Physical and spell resistance UI (below health bar). -->
    <TopLevelControl name="ArkUIBelowHealthBar" clampedToScreen="true">
      <Anchor
          point="TOP" relativeTo="ZO_PlayerAttributeHealth" relativePoint="BOTTOM"
          offsetX="0" offsetY="5" />
      <Dimensions x="1000" y="40" />
      <Controls>
        <Label name="$(parent)Resistance" font="ZoFontWinH4" color="ffffff" horizontalAlignment="CENTER" text="[R]">
          <Anchor
              point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"
              offsetX="0" offsetY="0" />
          <Dimensions x="40" y="40" />
          <Controls>
            <Label name="$(parent)Physical" font="ZoFontWinH4" color="ffffff" horizontalAlignment="RIGHT">
              <Anchor point="RIGHT"
                  relativeTo="$(parent)" relativePoint="LEFT"
                  offsetX="-5" offsetY="0" />
              <Dimensions x="50" y="40" />
            </Label>
            <Label name="$(parent)Spell" font="ZoFontWinH4" color="ffffff" horizontalAlignment="LEFT">
              <Anchor point="LEFT"
                  relativeTo="$(parent)" relativePoint="RIGHT"
                  offsetX="5" offsetY="0" />
              <Dimensions x="50" y="40" />
            </Label>
          </Controls>
        </Label>
      </Controls>
    </TopLevelControl>
    <!-- SECTION END -->
  </Controls>
</GuiXml>
