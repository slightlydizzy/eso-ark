<GuiXml>
  <Animations>
    <AnimationTimeline name="ArkUIAttributeBarDiffFade">
      <Animations>
        <AlphaAnimation duration="50" startAlpha="0" endAlpha="0" />
        <AlphaAnimation delay="50" duration="50" startAlpha="0" endAlpha="1" />
        <AlphaAnimation delay="2500" duration="400" startAlpha="1" endAlpha="0" />
      </Animations>
    </AnimationTimeline>
  </Animations>
  <Controls>
    <Label name="ArkUIAttributeBarLabel"
        font="$(MEDIUM_FONT)|16|thick-outline"
        color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED"
        virtual="true" />

    <!-- SECTION: Physical and spell resistance UI (below health bar). -->
    <Label name="ArkUIUnitFrameResistance" font="ZoFontWinH5" color="ffffff" horizontalAlignment="CENTER" text="[R]">
      <Anchor
          point="TOP" relativeTo="ZO_PlayerAttributeHealth" relativePoint="BOTTOM"
          offsetX="0" offsetY="5" />
      <Dimensions x="40" y="40" />  
    </Label>
    <Label name="ArkUIUnitFrameResistancePhysical" font="ZoFontWinH5" color="ffffff" horizontalAlignment="RIGHT" text="15123">
      <Anchor point="RIGHT"
          relativeTo="ArkUIBelowHealthBarResistanceIcon" relativePoint="LEFT"
          offsetX="-5" offsetY="0" />
      <Dimensions x="50" y="40" />
    </Label>
    <Label name="ArkUIUnitFrameResistanceSpell" font="ZoFontWinH5" color="ffffff" horizontalAlignment="LEFT" text="17112">
      <Anchor point="LEFT"
          relativeTo="ArkUIBelowHealthBarResistanceIcon" relativePoint="RIGHT"
          offsetX="5" offsetY="0" />
      <Dimensions x="50" y="40" />
    </Label>
    <!-- SECTION END -->
  </Controls>
</GuiXml>
